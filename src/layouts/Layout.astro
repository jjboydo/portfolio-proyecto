---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource-variable/rem";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div
			class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background-image: linear-gradient(to top, #09203f 0%, #537895 100%)]"
		>
		</div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "REM Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background: black;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background-image: radial-gradient(
			circle 815px at 23.4% -21.8%,
			rgba(9, 29, 85, 1) 0.2%,
			rgba(0, 0, 0, 1) 100.2%
		);
	}
</style>
