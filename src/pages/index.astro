---
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Juan José Boydo | Desarrollador y Programador Web">
	<main class="px-4">
		<SectionContainer class="py-24 xl:py-60">
			<h1
				class="text-5xl md:text-6xl lg:text-8xl font-black gap-x-4 pb-5 bg-gradient-to-r from-sky-300 to-cyan-600 inline-block text-transparent bg-clip-text"
			>
				Juan José Boydo
			</h1>
			<h2 class="text-2xl lg:text-3xl text-wrap pb-5 lg:pb-10">
				Desarrollador Web Frontend
			</h2>
			<h3 class="text-xl lg:text-2xl opacity-80 text-wrap">
				Desarrollador web frontend Jr de <span class="text-cyan-200"
					>Salta, Argentina</span
				>. Me especializo en crear aplicaciones web interactivas con
				React Js.
			</h3>
			<ul></ul>
		</SectionContainer>

		<div class="m-12 h-16"></div>

		<SectionContainer id="projects">
			<h2 class="text-5xl font-bold mb-14">Proyectos destacados</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
